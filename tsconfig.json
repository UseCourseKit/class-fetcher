{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": ["bun-types"]
  },
  "include": ["src/**/*", "test/**/*.test.ts"]
}
